# Production Environment Configuration Template
# Copy this file to .env.production and fill in your production values

# Database Configuration
# Replace with your production Neon database URL
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Session Configuration (CRITICAL: Change this!)
# Generate a strong random secret (minimum 32 characters)
SESSION_SECRET="your-super-secure-session-secret-minimum-32-characters"

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password
EMAIL_PASSWORD=your-app-password
ADMIN_EMAIL=admin@yourdomain.com

# Server Configuration
PORT=5000
NODE_ENV=production

# Security Configuration
MAX_REQUESTS_PER_WINDOW=100
RATE_LIMIT_WINDOW_MS=900000
SESSION_MAX_AGE=86400000

# Production Domain (update with your actual domain)
PRODUCTION_DOMAIN=https://yourdomain.com